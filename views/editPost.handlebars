<div class="card">
  <h3 class="card-header">Edit Post</h3>
  <form class="card-body edit-post-form">
    <label for="post-title" class="form-label">Subject:</label>
    <input name="post-title" type="text" value="{{blogPost.subject}}" class="form-input" />
    <label class="form-label" for="content">Description:</label>
    <input name="content" type="text" value="{{blogPost.description}}" class="form-input" />
    {{!-- <button type="submit" class="btn" id="save-post-btn" >Save Post</button> --}}
    <button type="button" class="btn" id="save-post-btn" >Save Post</button>
    <button type="button" class="btn" id="delete-post-btn">Delete Post</button>
  </form>
</div>

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
